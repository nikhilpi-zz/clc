            </select>
          </div>
          <div class="6u 12u(mobilep)">
            <input type="email" name="Email" placeholder="Email" required>
          </div>
        </div>
        <div class="row">
          <div class="12u">
            <textarea name="Message" placeholder="Message" rows="6 required"></textarea>
          </div>
        </div>
        <div class="row">
          <div class="12u">
            <ul class="actions">
              <li><input id="email-btn" type="submit" value="Send Message"></li>
            </ul>
          </div>
        </div>
      </form>

    </article>
